<?xml version="1.0" encoding="utf-8"?>
<updates>
    <update>
        <name>VM Framework Loader during Plugin Updates</name>
        <description>Makes sure the VirtueMart framework is loaded during automatic plugin updates using Joomla's plugin updater.</description>
        <type>plugin</type>
        <folder>system</folder>
        <element>vmloaderpluginupdate</element>
        <version>${PHING.VM.RELEASE}</version>
        <client>1</client>
        <infourl title="${PHING.VM.INFURLTITLE}">${PHING.VM.INFURL}</infourl>
        <downloads>
            <!--downloadurl type="full" format="zip">http://dev.virtuemart.net/attachments/download/XXX/plg_vmpayment_paypal.${PHING.VM.RELEASE}.zip</downloadurl-->
        </downloads>

        <maintainer>${PHING.VM.MAINTAINER}</maintainer>
        <maintainerurl>${PHING.VM.MAINTAINERURL}</maintainerurl>
        <targetplatform name="joomla" version="3.*" />
    </update>
